pipeline {
    agent any

 

    stages {
        stage('API GET Request') {
            steps {
                script {
                    def apiUrl = 'https://jsonplaceholder.typicode.com/todos/1'
                    def response = http(url: apiUrl, method: 'GET')

 

                    echo "API GET Response Code: ${response.status}"
                    echo "API GET Response Body: ${response.content}"
                }
            }
        }

    }
}
